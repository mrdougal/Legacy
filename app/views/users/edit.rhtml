<% 
msg = "Editing #{@user.login}"
title msg
 %>

<h1><%= msg %></h1>

<%= error_messages_for :user %>

<% form_for(:user, :url => user_path(@user), :html => { :method => :put }) do |f| %>

<%= render :partial => 'form', :locals => {:f => f} %>
<%= submit_tag 'Update user', {:class => 'send'} %>


<% end %>
